<html>
    <head>
        <title>Job Site</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"> 
        <!-- <link rel="stylesheet" href="/CSS/apk.css"> -->

    </head>
    <body>
        <h1> ALL JOBS</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>DESC</th>
                    <th>Apply</th>
                </tr>
            </thead>
            <tbody>
                <% jobs.forEach(function(job){ %>
                    <tr>
                        <td>  <%= job.title %> </td>
                        <td>  <%= job.desc %> </td>
                        <td> <form action="job/<%=job._id %>" method="POST">
                                <button class="btn btn-primary">Apply</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>

        </table>
        <a class="btn btn-primary" href="/employee/<%=employee.id%>/appliedJobs">All applied jobs</a> 
        <a class="btn btn-primary" href="/loginEmployee">Logout</a>
            
    </body>
</html>



